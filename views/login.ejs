<%- include('partials/header') %>

    <hr>

    <div style="background-color: #f5622c;" class="jumbotron">
        <h2 style="color: white;" >Login</h2>
    </div>
    <div style="width: 400px;margin-left: 500px;">
    <div class="shadow p-3 mb-5 bg-white rounded">
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="name">Email</label>
                <input type="email" class="form-control" name="username" id="email" placeholder="Enter Email">     
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password" id="password" placeholder="Password">
              </div>
              <button style="background-color: #f5622c;" class="btn" type="submit" >Submit</button>
        </form>
    </div>
</div>

<%- include('partials/footer') %>
